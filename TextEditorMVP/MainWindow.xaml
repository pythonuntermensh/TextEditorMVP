<Window x:Class="TextEditorMVP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextEditorMVP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ToolBar Height="25" VerticalAlignment="Top" Grid.RowSpan="2">
            <Button x:Name="OpenButton" Content="Open"/>
            <Button x:Name="SaveButton" Content="Save"/>
            <Button x:Name="SaveAsButton" Content="Save ass))))"/>
        </ToolBar>
        <TabControl x:Name="TabControl" Margin="0,30,0,0" Height="25" VerticalAlignment="Top" />
        <TextBox x:Name="TextBox" Margin="0,55,0,20" TextWrapping="Wrap" AcceptsReturn="True"/>
        <TextBlock x:Name="SymbolsCounterTextBlock" Height="20" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
